
<% layout('boilerplate') %> 

<div class="container">
<div class="row">
   <div class="col-6 offset-3 mt-5">
      <h1>Edit Product </h1>
<form method="post" action="/roha/<%=data._id%>/edit?_method=put"  class="validated-form" enctype="multipart/form-data" novalidate>
   <div class="form-group" >
     <label for="name">Name</label>
     <input type="text" class="form-control mb-3" id="name" value="<%=data.name%>" name="name" required>
   </div>
   <div class="form-group">
      <label for="price">Price</label>
      <input type="Number" class="form-control mb-3" id="price" value = "<%=data.price%>" name="price" required>
    </div>
    <div class="form-file mb-3 custom-file">
      <input type="file" name="image" id="image" class="form-file-input">
      <label for="image" class="form-file-label" >
        <span class="form-file-text custom-file-label">Choose Image</span>
        <span class="form-file-button">Browse</span>
      </label>
    </div>
   <div class="form-group">
     <label for="category">Select Category</label>
     <select class="form-control mb-3" id="category" name="category" required>
      <% for(categories of category){ %>
        <option value="<%=categories.categoryname%> "><%=categories.categoryname%> </option>
        <% } %>  
     </select>
   </div>
   <div class="form-group" >
     <label for="address">Adress</label>
     <input type="text" class="form-control mb-3" id="address" value="<%=data.address %> " name="address" required>
   </div>
   <div class="form-group mb-3" >
     <label for="description">Description</label>
     <textarea class="form-control" id="description"  rows="3" name="description" ></textarea>
   </div>

   <button class="btn btn-primary">Edit</button>
 </form>
 </div>
</div>
</div>

